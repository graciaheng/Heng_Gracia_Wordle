<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wordleGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Word List" 
                FontSize="30" 
                HorizontalOptions="Center" />

        <Label x:Name="chosenWordLbl"  
            Text="{Binding ChosenWord}" 
            FontSize="30" 
            HorizontalOptions="Center"/>

            <!-- entry boxes for wordle -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Entry x:Name="letter1" MaxLength="1" />
                <Entry x:Name="letter2" MaxLength="1" />
                <Entry x:Name="letter3" MaxLength="1" />
                <Entry x:Name="letter4" MaxLength="1" />
                <Entry x:Name="letter5" MaxLength="1" />
            </HorizontalStackLayout>

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
