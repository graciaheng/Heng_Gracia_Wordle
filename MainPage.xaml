<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wordleGame.MainPage"
             Title="Wordle">

    <ScrollView>
        <VerticalStackLayout
            Padding="15"
            Spacing="15"
            BackgroundColor="White">

        <Label Text="WORDLE" 
                FontSize="30" 
                FontFamily="Karnak Condensed"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Center" />

        <Label x:Name="TimerLabel"  
            Text="" 
            FontSize="30" 
            FontFamily="Karnak Condensed"
            FontAttributes="Bold"
            TextColor="Black"
            HorizontalOptions="Center"/>

        <Grid x:Name="GridPageContent" BackgroundColor="White"
         HeightRequest="500" 
         WidthRequest="500"
         HorizontalOptions="CenterAndExpand" 
         VerticalOptions="CenterAndExpand" >
                <!-- Content added here at runtime -->
            </Grid>

            <!-- entry boxes for wordle -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Entry x:Name="Letter1" 
                    WidthRequest="40" 
                    HeightRequest="40" 
                    FontSize="20"
                    FontFamily="Karnak Condensed"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    MaxLength="1"
                    BackgroundColor="GhostWhite"
                    TextColor="Black" />

                <Entry x:Name="Letter2" 
                    WidthRequest="40" 
                    HeightRequest="40" 
                    FontSize="20" 
                    FontFamily="Karnak Condensed"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    MaxLength="1"
                    BackgroundColor="GhostWhite"
                    TextColor="Black" />

                <Entry x:Name="Letter3"
                    WidthRequest="40"
                    HeightRequest="40" 
                    FontSize="20"
                    FontFamily="Karnak Condensed"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    MaxLength="1"
                    BackgroundColor="GhostWhite"
                    TextColor="Black"/>
                
                <Entry x:Name="Letter4" 
                    WidthRequest="40" 
                    HeightRequest="40" 
                    FontSize="20" 
                    FontFamily="Karnak Condensed"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    MaxLength="1"
                    BackgroundColor="GhostWhite"
                    TextColor="Black"/>
                
                <Entry x:Name="Letter5" 
                    WidthRequest="40" 
                    HeightRequest="40" 
                    FontSize="20" 
                    FontFamily="Karnak Condensed"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" 
                    MaxLength="1"
                    BackgroundColor="GhostWhite"
                    TextColor="Black"/>
            </HorizontalStackLayout>
            
            <Label x:Name = "DisplayStatus"
                HorizontalOptions="Center"
                FontSize="20"
                FontFamily="Karnak Condensed"
                FontAttributes="Bold"
                TextColor="Black" />

            <Button x:Name="submitButton"
                Text="Submit Guess" 
                FontFamily="Karnak Condensed"
                FontAttributes="Bold"
                BackgroundColor="YellowGreen"
                TextColor="White"
                WidthRequest="175"
                HeightRequest="50"
                Clicked="submitGuess" />

            <Button x:Name="historyButton"
                Text="View History" 
                FontFamily="Karnak Condensed"
                FontAttributes="Bold"
                BackgroundColor="YellowGreen"
                TextColor="White"
                WidthRequest="175"
                HeightRequest="50"
                Clicked="showHistory" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
